<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fuwu.LiuYanActivity">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbarreturn2"></include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/wholeziti"
        android:textSize="14sp"
        android:text="我要留言"/>
    <EditText
        android:id="@+id/liuyan_edt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="4dp"
        android:textSize="14sp"
        android:gravity="left|top"
        android:textColor="@color/wholeziti"
        android:background="@drawable/filletlinerlayout2"
        android:layout_margin="15dp"/>
    <Button
        android:id="@+id/liulan_tijiao"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="提交"
        android:background="@mipmap/buttons"
        android:textColor="@color/white"
        android:textSize="14sp"/>

</LinearLayout>