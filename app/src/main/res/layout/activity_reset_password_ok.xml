<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ResetPasswordOkActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@mipmap/logobg">
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbarreturn"></include>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="413dp"
        android:layout_marginTop="136dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/filletlinerlayout"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="81dp"
            android:layout_marginTop="34dp"
            android:src="@mipmap/ok"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="恭喜!重置密码已成功"
            android:textColor="@color/xuanzhong"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/resetok_next"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="登录"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@mipmap/buttons"/>
    </LinearLayout>
</RelativeLayout>